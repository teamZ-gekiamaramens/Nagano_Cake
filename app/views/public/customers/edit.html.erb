<%= form_with(model:@customer, url:public_customer_path(@customer), local: true ,method: :put) do |f| %>
<div class="kanji">
<%= f.label :"氏名", class: "control-label" %>
<%= f.text_field :last_name, class: "last_name  form-control-static name" %>
<%= f.text_field :first_name, class: "first_name  form-control-static name" %>
</div>
<div class="kana">
<%= f.label :"フリガナ", class: "control-label" %>
<%= f.text_field :last_name_kana, class: "kana_last_name  form-control-static name" %>
<%= f.text_field :first_name_kana, class: "kana_first_name  form-control-static name" %>
</div>
<div class="address_number">
<%= f.label :"郵便番号", class: "control-label" %>
<%= f.text_field :address_number, autofocus: true, autocomplete: "address_number", class: "form-control-static" %>
</div>
<div class="address">
<%= f.label :"住所", class: "control-label" %>
<%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control-static" %>
</div>
<div class="phone_number">
<%= f.label :"電話番号", class: "control-label" %>
<%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "form-control-static" %>
</div>
<div class="email">
<%= f.label :"メールアドレス", class: "control-label" %>
<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-static" %>
</div>

<%= f.submit "編集内容を保存する", class: "btn btn-primary save col-xs-6" %>
<%= link_to '退会する', unsubscribe_public_customers_path(@customer.id), class: "glyphicon glyphicon-tint btn btn-danger"%>
<%end%>