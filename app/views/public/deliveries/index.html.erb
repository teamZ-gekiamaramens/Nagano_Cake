<h2>配送先登録/一覧</h2>

<table class="table, mx-auto">
  <thead>
  <%= form_with model:@deliverie, url: public_deliveries_path, local:true do |f| %>
   <tr>
     <th><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></th>
     <th><%= f.text_area :postal_code ,size: "30x1" %></th>
   </tr>
  </thead>
  <tbody>
   <tr>
     <td><%= f.label :address, "住所" %></td>
     <td><%= f.text_field :address %></td>
   </tr>
   <tr>
     <td><%= f.label :name, "宛名" %></td>
     <td><%= f.text_field :name %></td>
     <td><%= f.submit '新規登録',class: "btn btn-success" %></td>
   </tr>
  <% end %>
  </tbody>
</table>

<div class="col-md-10 mt-5", style="margin-bottom: 150px; ">
  <table class="table table-bordered table-hover">
   <thead class="thead-light">
    <tr>
     <th>郵便番号</th><th>住所</th><th>宛名</th><th></th>
    </tr>
   </thead>
   <tbody class="border">
    <% @deliveries.each do |deliverie| %>
    <tr>
     <td style="width:10%"><%= deliverie.postal_code %></td>
     <td style="width:10%"><%= deliverie.address %></td>
     <td style="width:10%"><%= deliverie.name %></td>
     <td style="width:20%">
      <%= link_to "編集する", edit_public_delivery_path(deliverie), class: "btn btn-success" %>
      <%= link_to "削除する", public_delivery_path(deliverie), method: :delete, class: "btn btn-danger" %>
     </td>
    </tr>
    <% end %>
   </tbody>
  </table>
</div>