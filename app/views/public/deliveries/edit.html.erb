<h2>配送先編集</h2>
 <%= form_with model:@deliverie, url: public_delivery_path, method: :patch, local:true do |f| %>
<table>

  <tr>
     <th><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></th>
     <th><%= f.text_area :postal_code ,size: "30x1" %></th>
   </tr>
  </thead>
  <tbody>
   <tr>
     <td><%= f.label :address, "住所" %></td>
     <td><%= f.text_field :address %></td>
   </tr>
   <tr>
     <td><%= f.label :name, "宛名" %></td>
     <td><%= f.text_field :name %></td>
     <td><%= f.submit '変更内容を保存',class: "btn btn-success" %></td>
   </tr>
</table>

<% end %>