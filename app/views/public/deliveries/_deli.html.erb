
<%= flash[:notice]%>




<table class="table, mx-auto">
  <thead>
  <%= form_with model:deliverie, url: public_deliveries_path, local:true do |f| %>
   <tr>
     <th><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></th>
     <th><%= f.text_area :postal_code ,size: "30x1" %></th>
   </tr>
  </thead>
  <tbody>
   <tr>
     <td><%= f.label :address, "住所" %></td>
     <td><%= f.text_field :address %></td>
   </tr>
   <tr>
     <td><%= f.label :name, "宛名" %></td>
     <td><%= f.text_field :name %></td>
     <td><%= f.submit '新規登録',class: "btn btn-success" %></td>
   </tr>
  <% end %>
  </tbody>
</table>