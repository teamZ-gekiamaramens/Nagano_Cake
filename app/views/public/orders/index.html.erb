<h2>注文履歴一覧</h2>

<% @orders.each do |order| %>
<table class="table table-bordered" >
  <thead>
    <tr>
      <th class="table-light border-dark">注文日</th>
      <th class="table-light border-dark">配送先</th>
      <th class="table-light border-dark">注文商品</th>
      <th class="table-light border-dark">支払金額</th>
      <th class="table-light border-dark">ステータス</th>
      <th class="table-light border-dark">注文詳細</th>
    </tr>
  </thead>
  <tbody>
   <td class="border-dark"><%= order.created_at.strftime('%Y/%m/%d') %></td>
   <td class="border-dark">〒<%= order.postal_code %><br>
       <%= order.address %><br>
       <%= order.name %></td>
       <% order.order_details.each do |order| %>
        <td class="border-dark"><%= order.item.name %></td>
       <% end %>
       <td class="border-dark"><%= order.total %></td>
       <td class="border-dark"><%= order.order_status_i18n %></td>
       <td class="border-dark"><%= link_to "表示する", public_order_path(order) %></td>
  </tbody>
</table>
<% end %>
