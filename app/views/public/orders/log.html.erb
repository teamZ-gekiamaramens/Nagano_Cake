<div class="container">
    <div class="title">
        <h3>注文情報確認</h3>
    </div>
    <div class="row">
        <div class="col-md-9">
            <table class="table table-hover table-bordered">
                <thead>
                    <th>商品名</th>
                    <th>単価(税入)</th>
                    <th>数量</th>
                    <th>小計</th>
                </thead>
                <tbody>
                    <% @cart_items.each do |cart_item| %>
                    
                        <tr>
                            <td>
                                <%= attachment_image_tag @item, :image, width:"50" ,fallback: "no_image.jpg" %>
                                <%= cart_item.item.name %>
                            </td>
                            <td>
                                ¥<%= (cart_item.item.price * 1.1).floor %>
                            </td>
                            <td><%# 数量 %>
                                <%= cart_item.amount.to_s(:delimited) %>
                            </td>
                            <td><%# 小計 %>
                                ¥<%= ((cart_item.item.price * 1.1).to_i*(cart_item.amount).to_i).to_s(:delimited) %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="col-md-3">
            <table class="table table-hover table-bordered">
                <tbody>
                    <tr>
                        <td>送料</td>
                        <td>¥800</td>
                    </tr>
                    <tr>
                        <td>商品合計</td>
                        <td>¥<%= ((@total_price).to_i).to_s(:delimited) %></td>
                    </tr>
                    <tr>
                        <td>請求金額</td>
                        <td>¥<%= (((@total_price).to_i)+ 800).to_s(:delimited) %></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>