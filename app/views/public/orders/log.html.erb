<div class="container">
    <div class="title">
        <h3>注文情報確認</h3>
    </div>
    <div class="row">
        <div class="col-md-9">
            <table class="table table-hover table-bordered">
                <thead>
                    <th>商品名</th>
                    <th>単価(税入)</th>
                    <th>数量</th>
                    <th>小計</th>
                </thead>
                <tbody>
                    <% @cart_items.each do |cart_item| %>
                        <tr>
                            <td>
                                <%= attachment_image_tag @item, :image, width:"50" ,fallback: "no_image.jpg" %>
                                <%= cart_item.item.name %>
                            </td>
                            <td>
                                ¥<%= (cart_item.item.price*1.1).floor %>
                            </td>
                            <td>
                                <%= cart_item.item.amount %>
                            <td>
                                ¥<%= ((cart_item.item.price*1.1).to_i * (cart_item.amount).to_i) %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="col-md-3">
            <table class="table table-hover table-bordered">
                <tbody>
                    <tr>
                        <td>送料</td>
                        <td>¥800</td>
                    </tr>
                    <tr>
                        <td>商品合計</td>
                        <td>¥<%= @total_price.floor.to_s(:delimited) %></td>
                    </tr>
                    <tr>
                        <td>請求金額</td>
                        <td>¥<%= @all_total.floor.to_s(:delimited) %></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="delivery_order">
        <table>
            <tbody>
                <tr>
                    <td>支払方法</td>
                    <td><%= orders.payment %></td>
                </tr>
                <tr>
                    <td>お届け先</td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="col text-center">
        <%= link_to '注文を確定する',public_thanks_path, class:"btn btn-success" %>
</div>