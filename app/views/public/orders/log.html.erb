<div class="container">
    <div class="title">
        <h3>注文情報確認</h3>
    </div>
    <div class="row">
        <div class="col-md-9">
            <table class="table table-hover table-bordered">
                <thead>
                    <th>商品名</th>
                    <th>単価(税入)</th>
                    <th>数量</th>
                    <th>小計</th>
                </thead>
                <tbody>
                    <% @cart_items.each do |cart_item| %>

                        <tr>
                            <td>
                                <%= attachment_image_tag @item, :image, width:"50" ,fallback: "no_image.jpg" %>
                                <%= cart_item.item.name %>
                            </td>
                            <td>
                                ¥<%= (cart_item.item.price * 1.1).floor %>
                            </td>
                            <td><%# 数量 %>
                                <%= cart_item.amount.to_s(:delimited) %>
                            </td>
                            <td><%# 小計 %>
                                ¥<%= ((cart_item.item.price * 1.1).to_i*(cart_item.amount).to_i).to_s(:delimited) %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="col-md-3">
            <table class="table table-hover table-bordered">
                <tbody>
                    <tr>
                        <td>送料</td>
                        <td>¥800</td>
                    </tr>
                    <tr>
                        <td>商品合計</td>
                        <td>¥<%= ((@total_price).to_i).to_s(:delimited) %></td>
                    </tr>
                    <tr>
                        <td>請求金額</td>
                        <td>¥<%= (((@total_price).to_i)+ 800).to_s(:delimited) %></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
        <div class="container">
        <div class="row">
        <div class="col-ml-2">
        <strong>支払方法</strong>
        :<%= @order.payment %>
        </div>
        </div>
        </div>
<div class="col-md-10 mt-5">
<table class="table table-hover table-bordered">
      <thead class="thead-light">
          <tr>
          <th><strong>お届け先</strong>
          <th>郵便番号</th>
          <th>住所</th>
          <th>名前</th>
          </tr>
      </thead>
      <tbody class="border">
      <tr>
        <td style="width:10%"></td>
        <td style="width:10%">〒<%= @order.postal_code %></td>
        <td style="width:10%"><%= @order.address %></td>
        <td style="width:10%"><%= @order.name %></td>
      </tr>
      </tbody>

</table>
</div>
</div>
</div>

<%= form_with model:@order, url:public_orders_path, local:true do |f| %>
      <%= f.hidden_field :payment, :value => @order.payment %>
      <%= f.hidden_field :address, :value => @order.address %>
      <%= f.hidden_field :name, :value => @order.name %>
      <%= f.hidden_field :postal_code, :value => @order.postal_code %>
      <%= f.hidden_field :total, :value => @total_price %>
      <%= f.submit "注文確定する", class: "btn btn-success" %>
    <% end %>

