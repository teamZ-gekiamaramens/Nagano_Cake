<h2>ログイン</h2>
<table>
<tr>
<td><h5>会員の方はこちらからログイン</h5><td>
<tr>
<%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
<tr>
  <div class="field">
   <td><%= f.label :"メールアドレス" %></td>
   <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </div>
</tr>
<tr>
  <div class="field">
    <td><%= f.label :"パスワード" %></td>
    <td><%= f.password_field :password, autocomplete: "current-password" %></td>
  </div>
</tr>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
</table>
<% end %>

<%= render "devise/shared/links" %>
