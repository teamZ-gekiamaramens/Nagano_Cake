<div class ="container">
    <div class ="row">
        <div class="col-lg-12">
            <div class="add-genre">
                <div class="title">
                    <h3>ジャンル一覧・追加</h3>
                </div>
                <br />
                <div class="new-genre">
                    <p>ジャンル名</p>
                    <%= form_for(@genre, url:admin_genre_index_path) do |f| %>
                        <%= f.text_field :name %>
                        <%= f.submit "新規登録", class: "btn btn-success" %>
                    <% end %>
                </div>
            </div>
            <div class="genre-list">
                <table class='table table-hover table-inverse'>
                    <thead style="background-color:#eeeeee;">
                        <th>ジャンル</th>
                        <th></th>
                    </thead>
                    <tbody>
                        <% @genres.each do |genre| %>
                        <tr>
                            <td><%= genre.name %></td>
                            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
                        </tr>
                        <tr>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
