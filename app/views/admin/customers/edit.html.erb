<br>
<div class="container">
  <div class="row">
    <h4 class = bg-light><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
  </div>
</div>

<%= form_with model:@customer,url: admin_customer_path(@customer.id), local:true do |f| %>
<div class="container">
  <div class="row">
    <table>
      <tbody>

          <tr>
            <th>会員ID</th>
            <td ><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= f.text_field :last_name %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <br>
          <tr>
            <th>フリガナ</th>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>

          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :address_number %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.telephone_field :telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, "有効", value: false %>
            </td>
            <td>
              <%= f.radio_button :withdrawal, true %>
              <%= f.label :withdrawal, "退会", value: true %>
            </td>
          </tr>

  <div class="container">
    <div class="row">
        <tr>
          <th><div class = bg-center ><%= f.submit '変更を保存',class: "btn btn-primary"%></div></th>
        </tr>
      <% end %>
    </tbody>
   </table>
  </div>
</div>