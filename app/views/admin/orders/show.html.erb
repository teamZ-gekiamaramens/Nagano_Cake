<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p class="title">注文履歴詳細</p>
      <table class="table table-borderless" >
      <tr>
        <td style="width: 15%"><strong>購入者</strong></td>
        <td><%= link_to @order.customer.last_name + @order.customer.first_name, admin_customer_path(@order.customer.id) %></td>
        <td></td>
      </tr>
      <tr>
        <td><strong>注文日</strong></td>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </td>
      </tr>
      <tr>
        <td><strong>配送先</strong></td>
        <td>〒<%= @order.postal_code %> <%= @order.address %><br><%= @order.name %></td>
      </tr>
      <tr>
        <td><strong>支払方法</strong></td>
        <td><%= @order.payment_i18n %></td>
        <td></td>
      </tr>
      <tr>
        <td><strong>注文ステータス</strong></td>
        <td>
          <%= form_with model: @order, url: admin_order_path(@order), local: true do |f| %>
            <%= f.select :order_status, Order.order_statuses.keys.map {|k| [I18n.t("enums.order.order_status.#{k}"), k]} %>
          <%= f.submit "更新", class: 'btn btn-light btn-sm ' %>
          <% end %>
        </td>
        <td></td>
      </tr>
    </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <table class="table table-borderless" >
        <thead>
          <tr style="background-color: #ffe6ca" >
            <th style="width:30%">商品名</th>
            <th style="width:20%">単価（税込）</th>
            <th style="width:10%">数量</th>
            <th style="width:10%">小計</th>
            <th style="width:30%">製作ステータス</th>
            <th></th>
          </tr>
            <% @order.order_details.each do |order_detail| %>
          <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.price.to_s(:delimited) %></td>
              <td><%= order_detail.quantity %></td>
              <td><%= order_detail.order.total.to_s(:delimited) %></td>
              <td>
                <%= form_with model: order_detail, url: admin_order_detail_path(@order,order_detail) , local: true do |f| %>
                  <%= f.select :create_status, OrderDetail.create_statuses.keys.map {|k| [I18n.t("enums.order_detail.create_status.#{k}"), k]} %>
                <%= f.submit "更新", class: 'btn btn-light btn-sm ' %>
                <% end %>
              </td>
              <td></td>
          </tr>
            <% end %>
        </thead>
      </table>
    </div>

    <div class="col-md-3">
      <table class="table table-borderless">
        <tr>
          <td><strong>商品合計</strong></td>
          <td><%= (@order.total).to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <td><strong>送料</strong></td>
          <td>800円</td>
        </tr>
        <tr>
          <td><strong>請求金額合計</strong></td>
          <td><%= (@order.total + 800).to_s(:delimited) %>円</td>
        </tr>
      </table>
    </div>
  </div>
</div>