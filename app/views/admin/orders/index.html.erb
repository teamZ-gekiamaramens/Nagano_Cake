<div class="container">
  <div class="row">
    <div class="title">
      <h3>注文履歴一覧</h3>
    </div>
    <div class="col-md-12">
      <table class="table table-bordered table-hober">
        <thead>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </thead>
        <tbody>
          <%# @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to "詳細画面(日時)", admin_orders_path %>
            </td>
            <td>
              <%#= order.name %>
            </td>
            <td>
              <%#= order.amount %>
            </td>
            <td>
              <%#= order.order_status%>
            </td>
          </tr>
          <%# end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="paging">
    <%#= paginate @items %>
  </div>
</div>