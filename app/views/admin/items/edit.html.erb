<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="title">
                <h3 style="background-color:#eeeeee;">商品編集</h3>
            </div>    
            <div class="new-item">
                <%= form_with(model: @item, url:admin_item_path(@item.id)) do |f| %>
                <table class="new-item-table">
                    <tr>
                        <td>商品画像</td>
                        <td><%= f.attachment_field :image %></td>
                    </tr>
                    <tr>
                        <td>商品名</td>
                        <td><%= f.text_field :name %></td>
                    </tr>
                    <tr>
                        <td>商品説明</td>
                        <td><%= f.text_area :introduction %></td>
                    </tr>
                    <tr>
                        <td>ジャンル</td>
                        <td><%= f.collection_select :genre_id, Genre.all, :id, :name, {:include_blank => "-選択してください-"} %></td>
                    </tr>
                    <tr>
                        <td>税抜価格</td>
                        <td><%= f.text_field :price %>円</td>
                    </tr>
                    <tr>
                        <td>販売ステータス</td>
                        <td>
                            <%= f.radio_button :is_active, :true %>
                            <%= f.label :is_active, "販売中",value: :true, style: "display: inline-block;" %>
                            <%= f.radio_button :is_active, :false %>
                            <%= f.label :is_active, "販売停止中",value: :false, style: "display: inline-block;" %>
                        </td>
                    </tr>
                </table>
                <%= f.submit "変更を保存", class: 'btn btn-success' %>
                <% end %>
            </div>
        </div>
    </div>
</div>
