<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="title">
                <h2>商品一覧</h2>
            </div>
            <div class="add-item">
                <%= link_to '',new_admin_item_path, class: "fas fa-plus" %>
            </div>
            <table class="item-table">
                <thead>
                    <th>商品ID</th>
                    <th>商品名</th>
                    <th>税抜価格</th>
                    <th>ジャンル</th>
                    <th>ステータス</th>
                </thead>
                <tbody>
                    <% @items.each do |item| %>
                        <tr>
                            <td><%= item.id %></td>
                            <td><%= link_to item.name, admin_item_path(item.id) %></td>
                            <td><%= item.price %></td>
                            <td><%= item.genre.name %></td>
                            <td><%= item.is_active %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="paging">
                <%= paginate @items %>
            </div>

        </div>
    </div>
</div>
