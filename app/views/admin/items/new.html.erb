<h2>商品新規登録</h2>
<div class="new-item">
    <%= form_with(model: @item, url:admin_items_path) do |f| %>
    <table class="new-item-table">
        
        <tr>
            <td>商品画像</td>
            <td><%= f.attachment_field :image %></td>
        </tr>
        <tr>
            <td>商品名</td>
            <td><%= f.text_field :name %></td>
        </tr>
        <tr>
            <td>商品説明</td>
            <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
            <td>ジャンル</td>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
        </tr>
        <tr>
            <td>税抜価格</td>
            <td><%= f.text_field :price %>円</td>
        </tr>
        <tr>
            <td>販売ステータス</td>
            <td></td>
        </tr>
    </table>
    <%= f.submit "新規登録", class: 'btn btn-success' %>
    <% end %>
</div>
